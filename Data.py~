import numpy as np
from sklearn.model_selection import train_test_split


class Data():
    def __init__(self):
        self.dataSize = 10000
        self.features = self._generate_data('features')
        self.labels = self._generate_data('labels')

    def _generate_data(self, type):
        if type == 'features':
            return (np.random.randint(-10, 10, (self.dataSize, 512)))
        elif type == 'labels':
            return (np.random.randint(2, size=self.dataSize))

    def getData(self):
        X_train, X_test, y_train, y_test = train_test_split(self.features,
                                                            self.labels,
                                                            test_size=0.2,
                                                            random_state=42)
        return (X_train, X_test, y_train, y_test)
